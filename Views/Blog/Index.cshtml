@model IEnumerable<PocMvcNet8App.Models.BlogPostModel>
@inject PocMvcNet8App.Services.IImageService _imageService

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                @if (item.ImageData != null && item.ImageType != null)
                {
                    <img src="@_imageService.ConvertByteArrayToFile(item.ImageData, item.ImageType)" class="card-img-top" alt="Image">
                }
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Content)</p>
                    <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => item.CreatedDate)</small></p>
                    <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => item.Author)</small></p>
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>
