@model PocMvcNet8App.UserPrimaryInfo

@{
    ViewData["Title"] = "Delete";
}



<div class="row justify-content-center">
    <div class="col-md-6 bg-light shadow-lg p-3 mt-3">
        <h3>Are you sure you want to delete your profile information?</h3>
        <p class="text-danger">This action is permanent</p>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-lg btn-danger w-100 mt-1" />
            <a class="btn btn-lg btn-info w-100 mt-1" asp-action="Index">Profile</a>
        </form>
    </div>
</div>